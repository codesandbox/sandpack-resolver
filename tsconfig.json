{
  "compilerOptions": {
    "strict": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "fixture"]
}
